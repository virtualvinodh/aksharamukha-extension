{
  "name": "Aksharamukha: Script Converter",
  "short_name": "Aksharamukha",
  "description": "Aksharamukha aims to provide conversion between various scripts.",
  "version": "@@@",
  "manifest_version": 2,
  "permissions": ["contextMenus", "storage", "tabs", "activeTab", "http://*/", "https://*/"],
  "background": {
    "scripts": ["ScriptMixin.js", "background.js", "options.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
   "16": "16.png",
   "48": "48.png",
  "128": "128.png"
 },
  "web_accessible_resources": ["48.png"]
}
